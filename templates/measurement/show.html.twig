{% extends 'base.html.twig' %}

{% block title %}Measurement{% endblock %}

{% block body %}
    <h1>Measurement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ measurement.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ measurement.date ? measurement.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ measurement.description ? measurement.description.description : '' }}</td>
            </tr>
            <tr>
                <th>Temperature</th>
                <td>{{ measurement.temperature }}</td>
            </tr>
            <tr>
                <th>FeelsLike</th>
                <td>{{ measurement.feelsLike }}</td>
            </tr>
            <tr>
                <th>TempMin</th>
                <td>{{ measurement.tempMin }}</td>
            </tr>
            <tr>
                <th>TempMax</th>
                <td>{{ measurement.tempMax }}</td>
            </tr>
            <tr>
                <th>Pressure</th>
                <td>{{ measurement.pressure }}</td>
            </tr>
            <tr>
                <th>Precipitation</th>
                <td>{{ measurement.precipitation }}</td>
            </tr>
            <tr>
                <th>Rain</th>
                <td>{{ measurement.rain }}</td>
            </tr>
            <tr>
                <th>Snow</th>
                <td>{{ measurement.snow }}</td>
            </tr>
            <tr>
                <th>Clouds</th>
                <td>{{ measurement.clouds }}</td>
            </tr>
            <tr>
                <th>Humidity</th>
                <td>{{ measurement.humidity }}</td>
            </tr>
            <tr>
                <th>WindSpeed</th>
                <td>{{ measurement.windSpeed }}</td>
            </tr>
            <tr>
                <th>WindGustSpeed</th>
                <td>{{ measurement.windGustSpeed }}</td>
            </tr>
            <tr>
                <th>WindDirection</th>
                <td>{{ measurement.windDirection }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_measurement_index') }}">back to list</a>

    <a href="{{ path('app_measurement_edit', {'id': measurement.id}) }}">edit</a>

    {{ include('measurement/_delete_form.html.twig') }}
{% endblock %}
