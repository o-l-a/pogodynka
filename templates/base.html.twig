<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    {% block navbar %}
        <ul>
            {% if is_granted('ROLE_COUNTRY_INDEX') %}
                <li><a href="{{ path('app_country_index') }}">Countries</a></li>
            {% endif %}
            {% if is_granted('ROLE_LOCATION_INDEX') %}
                <li><a href="{{ path('app_location_index') }}">Locations</a></li>
            {% endif %}
            {% if is_granted('ROLE_MEASUREMENT_INDEX') %}
                <li><a href="{{ path('app_measurement_index') }}">Measurements</a></li>
            {% endif %}
            {% if is_granted('ROLE_WEATHER_DESCRIPTION_INDEX') %}
                <li><a href="{{ path('app_weather_description_index') }}">Descriptions</a></li>
            {% endif %}
            {% if app.user %}
            <li><a href="{{ path('app_logout') }}">Log out</a></li>
            {% endif %}
        </ul>
    {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
