{% extends 'base.html.twig' %}

{% block title %}Country{% endblock %}

{% block body %}
    <h1>Country</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ country.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ country.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ country.code }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_COUNTRY_INDEX') %}
        <a href="{{ path('app_country_index') }}">back to list</a>
    {% endif %}

    {% if is_granted('ROLE_COUNTRY_EDIT') %}
        <a href="{{ path('app_country_edit', {'id': country.id}) }}">edit</a>
    {% endif %}

    {{ include('country/_delete_form.html.twig') }}
{% endblock %}
